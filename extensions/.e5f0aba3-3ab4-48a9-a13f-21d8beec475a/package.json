{
  "name": "vexcode",
  "displayName": "VEX Robotics",
  "description": "The VEX Extension allows for software development on VEX IQ 2nd Generation, EXP, and V5 platforms. C/C++ and Python programming languages are supported",
  "version": "0.3.0",
  "publisher": "VEXRobotics",
  "preview": true,
  "homepage": "https://code.vex.com",
  "icon": "resources/icons/vexrobotics.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/VEX-Robotics/vex-vsc-extension.git"
  },
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Programming Languages",
    "Education",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:vex-sidebar-view"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "capabilities": {
      "untrustedWorkspaces": {
        "supported": false,
        "description": "only supported in trusted workspace"
      }
    },
    "configuration": [
      {
        "id": "settings",
        "title": "VEX",
        "properties": {
          "vexcode.Project.Home": {
            "type": "string",
            "default": "",
            "description": "Sets the default location for new projects",
            "scope": "application"
          },
          "vexcode.Project.BuildType": {
            "type": "string",
            "description": "Set Cpp Project Build Type",
            "scope": "application",
            "default": "Build",
            "enum": [
              "Build",
              "Rebuild"
            ]
          },
          "vexcode.Controller.Channel": {
            "type": "string",
            "description": "Sets V5 Controller Radio Channel.  This setting applies to VEXnet radio link only.",
            "scope": "application",
            "default": "Download",
            "enum": [
              "Download",
              "Pit"
            ]
          },
          "vexcode.Project.RunAfterDownload": {
            "type": "boolean",
            "description": "Set if user program should run after download",
            "scope": "application",
            "default": false
          },
          "vexcode.Cpp.Sdk.Home": {
            "default": "",
            "scope": "application",
            "description": "DO NOT EDIT"
          },
          "vexcode.Python.Sdk.Home": {
            "default": "",
            "description": "DO NOT EDIT",
            "scope": "application"
          },
          "vexcode.Cpp.Toolchain.Path": {
            "default": "",
            "type": "string",
            "scope": "application",
            "description": "Path to toolchain"
          },
          "vexcode.General.EnableUserTerminal": {
            "scope": "application",
            "default": "Enable",
            "description": "Enable extension to open and display data from the user port",
            "enum": [
              "Enable",
              "Disable"
            ]
          },
          "vexcode.WebsocketServer.Enable": {
            "scope": "application",
            "default": "Disable",
            "description": "Enables extension to start Websocket Server.  Server allows allows user access to a two-way pipe to selected vex device",
            "enum": [
              "Enable",
              "Disable"
            ]
          },
          "vexcode.WebsocketServer.Port": {
            "type": "integer",
            "default": 7071,
            "description": "Sets Websocket Server Port Number",
            "scope": "application"
          },
          "vexcode.WebsocketServer.HostAddress": {
            "type": "string",
            "default": "0.0.0.0",
            "description": "Sets Host Address",
            "scope": "application"
          }
        },
        "additionalProperties": false
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "vex_project_settings.json",
        "url": "./vex_project_settings.schema.json"
      }
    ],
    "commands": [
      {
        "command": "vexcode.project.new",
        "category": "VEX | Project",
        "title": "New Project"
      },
      {
        "command": "vexcode.project.import",
        "category": "VEX | Project",
        "title": "Import Project"
      },
      {
        "command": "vexcode.project.settingsUI",
        "category": "VEX | Project",
        "title": "VEX Project Settings",
        "icon": "$(debug-configure)"
      },
      {
        "command": "vexcode.project.build",
        "category": "VEX | Project",
        "title": "C++ Build"
      },
      {
        "command": "vexcode.project.clean",
        "category": "VEX | Project",
        "title": "C++ Clean"
      },
      {
        "command": "vexcode.project.rebuild",
        "category": "VEX | Project",
        "title": "C++ Rebuild"
      },
      {
        "command": "vexcode.resourceManager.download.toolchain",
        "category": "VEX | Project",
        "title": "Download Toolchain"
      },
      {
        "command": "vexcode.resourceManager.download.sdk",
        "category": "VEX | Project",
        "title": "Download SDK For Open Project"
      },
      {
        "command": "vexcode.system.screen-grab",
        "category": "VEX | System",
        "title": "Screen Grab",
        "icon": "$(device-camera)"
      },
      {
        "command": "vexcode.system.erase",
        "category": "VEX | System",
        "title": "Erase",
        "icon": "$(trashcan)"
      },
      {
        "command": "vexcode.system.info",
        "category": "VEX | System",
        "title": "Refresh System Info",
        "icon": "$(refresh)"
      },
      {
        "command": "vexcode.system.download",
        "category": "VEX | System",
        "title": "Download User Program",
        "icon": "$(arrow-down)"
      },
      {
        "command": "vexcode.system.battery-medic",
        "category": "VEX | System",
        "title": "Battery Medic",
        "icon": "$(vex-battery-medic)"
      },
      {
        "command": "vexcode.system.brain-name",
        "category": "VEX | System",
        "title": "Set Brain Name",
        "icon": "$(edit)"
      },
      {
        "command": "vexcode.system.team-number",
        "category": "VEX | System",
        "title": "Set Team Number",
        "icon": "$(edit)"
      },
      {
        "command": "vexcode.system.update.vexos",
        "category": "VEX | System",
        "title": "Update Brain",
        "icon": "$(arrow-up)"
      },
      {
        "command": "vexcode.system.update.controller",
        "category": "VEX | System",
        "title": "Update Controller (EXP and IQ 2nd Gen Only)",
        "icon": "$(arrow-up)"
      },
      {
        "command": "vexcode.system.update.dfu",
        "category": "VEX | System",
        "title": "Recover DFU Device",
        "icon": "$(arrow-up)"
      },
      {
        "command": "vexcode.system.update.brainMenu",
        "category": "VEX | System",
        "title": "Update Brain"
      },
      {
        "command": "vexcode.system.update.controllerMenu",
        "category": "VEX | System",
        "title": "Update Controller"
      },
      {
        "command": "vexcode.system.update.controller.atmel",
        "category": "VEX | System",
        "title": "Update USB"
      },
      {
        "command": "vexcode.system.update.controller.radio",
        "category": "VEX | System",
        "title": "Update Radio"
      },
      {
        "command": "vexcode.system.update.pythonVM",
        "category": "VEX | System",
        "title": "Update Python VM",
        "icon": "$(python-qp)"
      },
      {
        "command": "vexcode.command-help",
        "category": "VEX | Command Help",
        "title": "VEX Command Help"
      },
      {
        "command": "vexcode.command-help.show-all",
        "category": "VEX | Command Help",
        "title": "Show All Commands"
      },
      {
        "command": "vexcode.terminal.log.clear",
        "category": "VEX | Terminal",
        "title": "Clear Log Terminal"
      },
      {
        "command": "vexcode.terminal.interactive.clear",
        "category": "VEX | Terminal",
        "title": "Clear Interactive Terminal"
      },
      {
        "command": "vexcode.terminal.newset",
        "category": "VEX | Terminal",
        "title": "Create New Terminal Set"
      },
      {
        "command": "vexcode.drivers.install",
        "category": "VEX | Driver",
        "title": "VEX Driver Install"
      }
    ],
    "keybindings": [
      {
        "command": "vexcode.statusbar.build",
        "key": "ctrl+b",
        "mac": "cmd+b"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vex-sidebar-container",
          "title": "VEX",
          "icon": "./resources/icons/vex.svg"
        }
      ]
    },
    "views": {
      "vex-sidebar-container": [
        {
          "id": "vex-sidebar-home-webview",
          "name": "Project Actions",
          "type": "webview"
        },
        {
          "id": "vex-sidebar-view",
          "name": "VEX Device Info",
          "type": "tree"
        }
   
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "vexcode.command-help",
          "when": " editorLangId =~ /c$|cpp$|python$/ && vexrobotics.vexcode.isValidProjectID == true ",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "vexcode.system.info",
          "when": " view == vex-sidebar-view ",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "vexcode.project.settingsUI",
          "when": "resourceFilename == vex_project_settings.json && resource in vexrobotics.vexcode.vexProjectSettingsFolderArr",
          "group": "inline"
        }
      ],
      "view/item/context": [
        {
          "command": "vexcode.system.erase",
          "when": "view == vex-sidebar-view && viewItem == progItem ",
          "group": "inline"
        },
        {
          "command": "vexcode.system.screen-grab",
          "when": "view == vex-sidebar-view && viewItem =~ /BrainItem$/ ",
          "group": "inline"
        },
        {
          "command": "vexcode.system.brain-name",
          "when": "view == vex-sidebar-view && viewItem == brainNameItem ",
          "group": "inline"
        },
        {
          "command": "vexcode.system.team-number",
          "when": "view == vex-sidebar-view && viewItem == teamNumberItem ",
          "group": "inline"
        },
        {
          "command": "vexcode.system.update.vexos",
          "when": "view == vex-sidebar-view && viewItem == vexosUpdateItem && vexcode.vexosBrainUpdateInProgress != true && vexcode.vexosControllerUpdateInProgress != true",
          "group": "inline"
        },
        {
          "command": "vexcode.system.update.controller",
          "when": "view == vex-sidebar-view && viewItem == vexosControllerUpdateItem && vexcode.vexosBrainUpdateInProgress != true && vexcode.vexosControllerUpdateInProgress != true ",
          "group": "inline"
        },
        {
          "command": "vexcode.system.update.dfu",
          "when": "view == vex-sidebar-view && viewItem == dfuRecoverItem && vexcode.vexosBrainUpdateInProgress != true && vexcode.vexosControllerUpdateInProgress != true ",
          "group": "inline"
        },
        {
          "command": "vexcode.system.battery-medic",
          "when": "view == vex-sidebar-view && viewItem == v5BrainItem ",
          "group": "inline"
        },
        {
          "command": "vexcode.system.update.controller.atmel",
          "when": "view == vex-sidebar-view && viewItem == controllerAtmelItem && vexrobotics.vexcode.debugEnabled == true",
          "group": "navigation "
        },
        {
          "command": "vexcode.system.update.controller.radio",
          "when": "view == vex-sidebar-view && viewItem == controllerRadioItem && vexrobotics.vexcode.debugEnabled == true",
          "group": "navigation "
        },
        {
          "command": "vexcode.system.update.controllerMenu",
          "when": "view == vex-sidebar-view && viewItem =~ /vexosControllerUpdateItem|controllerItem/ && vexrobotics.vexcode.debugEnabled == true",
          "group": "navigation "
        },
        {
          "command": "vexcode.system.update.brainMenu",
          "when": "view == vex-sidebar-view && viewItem =~ /brainItem|vexosUpdateItem/ && vexrobotics.vexcode.debugEnabled == true",
          "group": "navigation "
        }
      ]
    },
    "icons": {
      "python-qp": {
        "description": "Python File Icon",
        "default": {
          "fontPath": "./resources/fonts/seti.woff",
          "fontCharacter": "\\E07B",
          "fontColor": "#519aba"
        }
      },
      "vex-play": {
        "description": "VEX Play Icon",
        "default": {
          "fontPath": "./resources/fonts/vexicon.woff",
          "fontCharacter": "\\E001"
        }
      },
      "vex-stop": {
        "description": "VEX Stop Icon",
        "default": {
          "fontPath": "./resources/fonts/vexicon.woff",
          "fontCharacter": "\\E002"
        }
      },
      "vex-build": {
        "description": "VEX Build Icon",
        "default": {
          "fontPath": "./resources/fonts/vexicon.woff",
          "fontCharacter": "\\E003",
          "fontColor": "#519aba"
        }
      },

      "vex-download": {
        "description": "VEX Download Icon",
        "default": {
          "fontPath": "./resources/fonts/vexicon.woff",
          "fontCharacter": "\\E004"
        }
      },
      "vex-feedback": {
        "description": "VEX Feedback",
        "default": {
          "fontPath": "./resources/fonts/vexicon.woff",
          "fontCharacter": "\\E005"
        }
      },
      "vex-slot": {
        "description": "VEX Slot",
        "default": {
          "fontPath": "./resources/fonts/vexicon.woff",
          "fontCharacter": "\\E006"
        }
      },
      "vex-share": {
        "description": "VEX Share",
        "default": {
          "fontPath": "./resources/fonts/vexicon.woff",
          "fontCharacter": "\\E007"
        }
      },
      "vex-battery-medic": {
        "description": "Battery Medic",
        "default": {
          "fontPath": "./resources/fonts/vexicon.woff",
          "fontCharacter": "\\E00B"
        }
      },
      "vex-V5-Brain": {
        "description": "VEX V5 Brain Icon",
        "default": {
          "fontPath": "./resources/fonts/vexicon.woff",
          "fontCharacter": "\\E00C"
        }
      },
      "vex-V5-Controller": {
        "description": "VEX V5 Controller Icon",
        "default": {
          "fontPath": "./resources/fonts/vexicon.woff",
          "fontCharacter": "\\E00D"
        }
      },
      "vex-EXP-Brain": {
        "description": "VEX EXP Brain Icon",
        "default": {
          "fontPath": "./resources/fonts/vexicon.woff",
          "fontCharacter": "\\E00E"
        }
      },
      "vex-EXP-Controller": {
        "description": "VEX EXP Controller Icon",
        "default": {
          "fontPath": "./resources/fonts/vexicon.woff",
          "fontCharacter": "\\E00F"
        }
      },
      "vex-IQ2-Brain": {
        "description": "VEX IQ2 Brain Icon",
        "default": {
          "fontPath": "./resources/fonts/vexicon.woff",
          "fontCharacter": "\\E010"
        }
      },
      "vex-IQ2-Controller": {
        "description": "VEX IQ2 Controller Icon",
        "default": {
          "fontPath": "./resources/fonts/vexicon.woff",
          "fontCharacter": "\\E011"
        }
      }
    }
  },
  "scripts": {
    "compile-tsc": "tsc -p ./",
    "compile-esbuild": "ts-node _scripts/esbuild.ts --release",
    "pretest": "npm run compile-tsc && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./dist/test/runTest.js",
    "postinstall": "ts-node _scripts/postInstall.ts",
    "vscode:prepublish": "npm install",
    "debug-tsc": "tsc -watch -p ./",
    "release-esbuild": "ts-node _scripts/esbuild.ts --release",
    "package-extension-debug": "npm run compile-tsc && ts-node _scripts/createFolder.ts --debug && vsce package --out dist_ext/debug/  && ts-node _scripts/renameDebug.ts",
    "package-extension-release": "npm run compile-esbuild && ts-node _scripts/createFolder.ts --release && vsce package --out dist_ext/release/ ",
    "build-font": "ts-node _scripts/svgToWoff.ts ./assets/svg ./resources/fonts",
    "build-fasticon-font": "ts-node _scripts/fasticon-build.ts ./assets/svg ./resources/fonts"

  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/jquery": "^3.5.14",
    "@types/markdown-it": "^12.2.3",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.9",
    "@types/unzipper": "^0.10.5",
    "@types/vscode": "^1.66.0",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vscode/test-electron": "^1.6.2",
    "electron-rebuild": "^3.2.7",
    "esbuild": "^0.14.38",
    "esbuild-plugin-node-externals": "^0.3.0",
    "eslint": "^8.1.0",
    "fantasticon": "^1.2.3",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "node-abi": "^3.8.0",
    "node-gyp": "^8.4.1",
    "rebuild": "^0.1.2",
    "remark": "^14.0.2",
    "svgtofont": "^3.17.8",
    "ts-node": "^10.7.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.28",
    "@vscode/webview-ui-toolkit": "^0.9.1",
    "etl": "^0.7.0",
    "git": "^0.1.5",
    "highlight.js": "^11.6.0",
    "markdown-it": "^13.0.1",
    "markdown-it-front-matter": "^0.2.3",
    "module-alias": "^2.2.2",
    "pull": "^2.1.1",
    "react": "^18.2.0",
    "serialport": "^10.4.0",
    "unzipper": "^0.10.11",
    "ws": "^8.9.0"
  },
  "_moduleAliases": {
    "@vex": "dist/lib",
    "@vex-webviews": "dist/webviews"
  }
}
